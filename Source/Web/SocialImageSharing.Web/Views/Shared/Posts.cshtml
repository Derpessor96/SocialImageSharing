@model IList<SocialImageSharing.Web.ViewModels.Posts.PostViewModel>

@{
	Layout = null;
	const int rowSize = 4;
}

@for (int i = 0; i < Model.Count; i += rowSize)
{
	<div class="row">
		@for (int j = 0; j < rowSize && i + j < Model.Count; ++j)
		{
			<div class="col-md-3">
				<div class="well">
					<h4 class="text-center">@Html.DisplayFor(m => Model[i + j].Title)</h4>
					<a href="/Posts/PostDetails?id=@Html.DisplayFor(m => Model[i + j].Id)">
						<div class="image-container">
							<img class="img-responsive" src='@Url.Action("GetPostImage", "Images", new { id = Model[i + j].Id })' />
						</div>
					</a>
					<small class="">Posted by: @Html.DisplayFor(m => Model[i + j].CreatorName)</small>
					<br />
					<small>Posted at: @Html.DisplayFor(m => Model[i + j].CreatedOn)</small>
					<br />
					<small>Rating: @Html.DisplayFor(m => Model[i + j].Rating)</small>
				</div>
			</div>
		}
	</div>
}