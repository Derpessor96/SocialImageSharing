@model IList<SocialImageSharing.Web.ViewModels.Posts.PostViewModel>

@{
	const int rowSize = 4;
}

@for (int i = 0; i < Model.Count; i += rowSize)
{
	<div class="row">
		@for (int j = 0; j < rowSize && i + j < Model.Count; ++j)
		{
			<div class="col-md-3">
				<div class="well">
					<h4 class="text-center">@Model[i + j].Title</h4>
					<div class="image-container">
						<img class="img-responsive" src='@Url.Action("GetPostImage", "Images", new { id = Model[i + j].Id })' />
					</div>
					<small class="">Posted by: @Model[i + j].CreatorName</small>
					<br />
					<small>Posted at: @Model[i + j].CreatedOn.ToString("dd/mm/yyyy hh:mm")</small>
					<br />
					<small>Rating: @Model[i + j].Rating</small>
				</div>
			</div>
		}
	</div>
}